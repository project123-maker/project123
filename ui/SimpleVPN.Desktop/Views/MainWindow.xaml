<Window x:Class="SimpleVPN.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple" Width="420" Height="560" ResizeMode="NoResize"
        Background="#0F1115" WindowStartupLocation="CenterScreen">
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="16"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="12"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Logo -->
		<StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,16" VerticalAlignment="Center">
			<Image Source="/Assets/logo.png" Width="28" Height="28" Margin="0,0,8,0"/>
			<TextBlock Text="Simple" Foreground="#EAF2FF" FontSize="22" FontWeight="Bold"/>
		</StackPanel>

		<!-- Status pill -->
		<Border Grid.Row="1" Background="#19202A" CornerRadius="10" Padding="10,6" >
			<TextBlock x:Name="StatusText" Text="Status: Idle"
					   Foreground="#8BB3FF" FontWeight="SemiBold"/>
		</Border>

		<!-- redeem input -->
		<TextBlock Grid.Row="3" Text="Redeem Code" Foreground="#6B7A90" Margin="2,0,0,6"/>
		<Border Grid.Row="3" Margin="0,18,0,0" Background="#121823" CornerRadius="12" Padding="12,8">
			<TextBox x:Name="RedeemInput"
					 Background="Transparent" BorderThickness="0"
					 Foreground="#EAF2FF" CaretBrush="#EAF2FF"
					 FontSize="16" />
		</Border>

		<!-- Connect -->
		<Border Grid.Row="5" Height="52" Margin="0,12,0,10" CornerRadius="14">
			<Button x:Name="ConnectBtn"
					Click="ConnectBtn_Click"
					Background="#18D2B5" Foreground="#081015"
					FontWeight="Bold" BorderThickness="0"
					Content="Connect"
					Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
		</Border>

		<!-- Disconnect -->
		<Border Grid.Row="6" Height="52" CornerRadius="14">
			<Button x:Name="DisconnectBtn"
					Click="DisconnectBtn_Click"
					Background="#18222F" Foreground="#8BB3FF"
					FontWeight="Bold" BorderThickness="0"
					Content="Disconnect"
					Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
		</Border>

	</Grid>
</Window>
