<Window x:Class="SimpleVPN.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SimpleVPN" Width="360" Height="260" WindowStartupLocation="CenterScreen"
        Background="#121418">
	<Grid Margin="16">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="8"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="8"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<TextBlock Text="Status: Idle" x:Name="StatusText"
				   Foreground="#9ad5c0" FontSize="14"/>

		<TextBox Grid.Row="2" x:Name="RedeemInput" Height="36"
				 Padding="8" Background="#1a1f25" Foreground="#e9f1f0"
				 BorderBrush="#263341" BorderThickness="1"
				 ToolTip="Enter redeem code" />

		<StackPanel Grid.Row="4" Orientation="Vertical" HorizontalAlignment="Stretch" >
			<Button x:Name="ConnectBtn" Height="40" Margin="0,0,0,8"
					Background="#18c29c" Foreground="Black" FontWeight="Bold"
					Click="ConnectBtn_Click">Connect</Button>
			<Button x:Name="DisconnectBtn" Height="40"
					Background="#263341" Foreground="#e9f1f0"
					Click="DisconnectBtn_Click">Disconnect</Button>
		</StackPanel>
	</Grid>
</Window>
