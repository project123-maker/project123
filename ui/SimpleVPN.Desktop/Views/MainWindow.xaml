<Window x:Class="SimpleVPN.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SimpleVPN" Width="380" Height="260"
        Background="#111317" Foreground="#E6F5F2"
        WindowStartupLocation="CenterScreen">
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="12"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="12"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="12"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBlock x:Name="StatusText" Text="Status: Idle" FontSize="14" Opacity="0.9"/>

		<TextBox x:Name="RedeemInput" Grid.Row="2" Height="40" Padding="10"
				 BorderThickness="0" Background="#1A1D23" Foreground="#E6F5F2"
				 Text="" />

		<Button Grid.Row="4" Height="44" Content="Connect" Click="ConnectBtn_Click"
				Background="#23D2B5" Foreground="#0B0F10" BorderThickness="0"
				FontWeight="SemiBold"/>

		<Button Grid.Row="6" Height="44" Content="Disconnect" Click="DisconnectBtn_Click"
				Background="#2A2F36" Foreground="#E6F5F2" BorderThickness="0"/>
	</Grid>
</Window>
